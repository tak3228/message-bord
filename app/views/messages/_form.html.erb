<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
<% if @message.errors.present? %>
<div class="alert alert-danger">
	<%= alert %>
	<ul>
		<% @message.errors.full_messages.each do |full_message| %>
		<li>
			<%= full_message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<label for="message_name" class="control-label container-fluid">
		ユーザ名:
	</label>
	<div class="container-fluid">
		<%= f.text_field :name, :class => "form_control" %>
	</div>
</div>

<br>
<br>

<div class="form-group">
	<label for="message_name" class="control-label container-fluid">コメント:</label>
	<div class="container-fluid">
		<%= f.text_area :body, :class => "form-control" %>
	</div>
</div>
<%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
