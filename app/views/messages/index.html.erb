<div class="panel panel-default">
    <div class="panel-heading">

        <span class="glyphicon glyphicon-apple" aria-hidden="true"></span>メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>

        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <hr>

        <% end %>
    </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
	<% if @message.errors.present? %>
		<div class="alert alert-danger">
			<%= alert %>
			<ul>
				<% @message.errors.full_messages.each do |full_message| %>
					<li>
						<%= full_message %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
		<label for="message_name" class="control-label container-fluid" >
			ユーザ名:
		</label>
		<div class="container-fluid">
			<%= f.text_field :name, :class => "form_control" %>
		</div>
	</div>

<br>
<br>

<div class="form-group">
	<label for="message_name" class="control-label container-fluid">コメント:</label>
	<div class="container-fluid">
		<%= f.text_area :body, :class => "form-control" %>
	</div>	
</div>
	<%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
