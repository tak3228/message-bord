<div class="panel panel-default">
  <div class="panel-heading">

      <span class="glyphicon glyphicon-apple" aria-hidden="true"></span>メッセージ一覧
  </div>
  <div class="panel-body">
	  <% @messages.each do |message| %>
		  <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
		  
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <hr> 

    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <label for="message_name" class="control-label col-md-2"> ユーザ名:</label>
  <div class="col-md-4">
	  <%= f.text_field :name %>
  </div>

  <br>
  <br>

  <label for="message_name" class="control-label col-md-2">コメント:</label>
  <div class="col-md-2">
  <%= f.text_area :body %>
  </div>	  
    <br>
    <br>
    <br>
    <br> 
    <%= f.submit class: "btn btn-sm btn-primary" %>
    <br>
    <br>
    <br>

<% end %>
